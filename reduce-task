const fruits = ["Apple", "Orange", "Apple", "Banana", "Orange", "Apple"];

const count = fruits.reduce((acc, fruit) => {
  // যদি ফলটি আগে থেকেই আমাদের ঝুড়িতে (acc) থাকে, তবে তার মান ১ বাড়িয়ে দাও
  if (acc[fruit]) {
    acc[fruit] = acc[fruit] + 1;
  } else {
    // যদি ফলটি প্রথমবার পাওয়া যায়, তবে ১ দিয়ে শুরু করো
    acc[fruit] = 1;
  }
  return acc;
}, {}); // শুরুতে আমরা একটি খালি অবজেক্ট {} নিলাম

console.log(count); // আউটপুট: { Apple: 3, Orange: 2, Banana: 1 }
