const items = [
  { name: "Rice", price: 60 },
  { name: "Oil", price: 180 },
  { name: "Sugar", price: 120 },
];
// আউটপুট হওয়া উচিত: 360

const total = items.reduce(function (acc, currentItem) {
  return acc + currentItem.price;
}, 0);
console.log("মোট খরচ:", total);

